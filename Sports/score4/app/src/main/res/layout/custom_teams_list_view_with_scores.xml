<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/teamNameForStandingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="25sp"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/argentina"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/scoreText"
            android:id="@+id/scoreIndicatorTextView"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:textSize="25sp"
            android:gravity="center_vertical|right"
            android:layout_marginStart="15sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="40sp"
            android:layout_height="fill_parent"
            android:text="@string/_14"
            android:id="@+id/numberOfWinsTextView"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:gravity="center_vertical|center|center_horizontal|right"
            android:layout_marginStart="0dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</TableLayout>