<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sports1"
    tools:ignore="ScrollViewCount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tva0"
                style="@style/textViewStyle"
                android:hint="@string/team_a" />

            <TextView
                style="@style/textViewStyle"
                android:padding="4dp"
                android:text="@string/vs"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvb0"
                style="@style/textViewStyle"
                android:hint="@string/team_b" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tva"
                style="@style/scoreViewStyle" />

            <TextView
                android:id="@+id/tvb"
                android:layout_marginStart="80dp"
                style="@style/scoreViewStyle"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/editTextTextPersonName"
                style="@style/textViewStyle4"
                android:text="@string/total_point" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvrpa"
                style="@style/cardScoreViewStyle1" />
            <TextView
                android:id="@+id/editTextTextPersonName2"
                style="@style/textViewStyle2"
                android:text="@string/raid_point" />

            <TextView
                android:id="@+id/tvrpb"
                style="@style/cardScoreViewStyle1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvtpa"
                style="@style/cardScoreViewStyle1" />
            <TextView
                android:id="@+id/editTextTextPersonName3"
                style="@style/textViewStyle2"
                android:text="@string/tackle_point" />
            <TextView
                android:id="@+id/tvtpb"
                style="@style/cardScoreViewStyle1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvepa"
                style="@style/cardScoreViewStyle1"/>
            <TextView
                android:id="@+id/editTextTextPersonName5"
                style="@style/textViewStyle2"
                android:text="@string/extra_point" />
            <TextView
                android:id="@+id/tvepb"
                style="@style/cardScoreViewStyle1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvapa"
                style="@style/cardScoreViewStyle1"/>
            <TextView
                android:id="@+id/editTextTextPersonName4"
                style="@style/textViewStyle2"
                android:ems="10"
                android:text="@string/all_out" />

            <TextView
                android:id="@+id/tvapb"
                style="@style/cardScoreViewStyle1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:text="@string/result"
                style="@style/textViewStyle5"/>
            <TextView
                android:id="@+id/tvr"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                style="@style/textViewStyle5"/>
            <TextView
                android:id="@+id/textView11"
                android:text="@string/won_the_match_by"
                style="@style/textViewStyle5"/>
            <TextView
                android:id="@+id/tvr1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                style="@style/textViewStyle5"/>
            <TextView
                android:id="@+id/textView13"
                android:text="@string/points"
                style="@style/textViewStyle5"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>